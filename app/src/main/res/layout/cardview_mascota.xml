<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_height="wrap_content"
    android:layout_width="350dp"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:background="#FFF9C4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="@dimen/cv_size_w"
            android:layout_height="@dimen/cv_size_h"
            android:src="@drawable/card_mascotas"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/imgdogBoneWhite"
                android:layout_width="@dimen/bone_like_button"
                android:layout_height="@dimen/bone_like_button"
                android:layout_marginTop="6dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:background="#FFF9C4"
                android:src="@drawable/bone_like" />

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/imgdogBoneWhite"
                android:fontFamily="@font/hello_crafter"
                android:text="@string/nombre"
                android:padding="15dp"
                android:textSize="@dimen/nombre_cardView"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvRaitingCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_rate_size"
                android:fontFamily="@font/riverflows"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgdogBoneYellow"
                android:gravity="center_vertical"
                android:text="@string/raiting" />

            <ImageView
                android:id="@+id/imgdogBoneYellow"
                android:layout_width="@dimen/bones_size"
                android:layout_height="@dimen/bones_size"
                android:src="@drawable/bone_rate"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
